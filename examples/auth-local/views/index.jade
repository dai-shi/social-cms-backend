doctype html
html(ng-app="mainModule")
  head
    meta(charset="utf-8")
    meta(content="width=device-width, initial-scale=1, user-scalable=no", name="viewport")
    title Hajuku BBS
    link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", rel="stylesheet")
    link(href="//cdn.rawgit.com/mgcrea/angular-motion/v0.3.4/dist/angular-motion.min.css", rel="stylesheet")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-route.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-resource.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-sanitize.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-animate.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-cookies.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.5/angular-strap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.5/angular-strap.tpl.min.js")
    script(src="javascripts/main.js")
  body
    header.navbar.navbar-default.navbar-static-top(bs-navbar)
      .container-fluid(bs-collapse, data-animation="am-collapse", data-active-class="am-collapse", data-start-collapsed="true")
        .navbar-header
          button.navbar-toggle(bs-collapse-toggle)
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#/") SCB LOCAL
        nav.navbar-collapse.collapse.bs-navbar-collapse(bs-collapse-target)
          ul.nav.navbar-nav
            li(data-match-route="/home")
              a(href="#/home") ホーム
            li(data-match-route="/about")
              a(href="#/about") このアプリについて
          ul.nav.navbar-nav.navbar-right
            li(ng-hide="myself")
              a(href="login/local") ログイン
            li.dropdown(ng-show="myself")
              a.dropdown-toggle(bs-dropdown)
                span {{myself.fullname}}
                span.caret
              ul.dropdown-menu
                li
                  a(href="logout") ログアウト
    ng-view
